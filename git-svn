# Getting your repository set up

git-svn clone http://example.com/my_subversion_repo local_dir
git-svn show-ignore > .gitignore

# Git branches
git checkout -b new_branch_name [old_branch_name]

# Adding changes
git add
git add --patch

# Remove files
git rm
git rm -r

# Reverting changes
git checkout <filename>
git reset HEAD <filename>

# Commiting changes
git checkout master
git merge <feature-branch>

# Update from and committing back to Subversion
git svn rebase
git svn dcommit
